<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@android:color/white"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:baselineAligned="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_item_article_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/article_title"
            android:ellipsize="end"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/subtitle_item_article_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:minLines="2"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/article_subtitle"
            android:ellipsize="end"
            android:textSize="14sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_thumb_item_article_header"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:background="@color/divider">

        <ImageView
            android:id="@+id/thumb_item_article_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </FrameLayout>

</LinearLayout>
